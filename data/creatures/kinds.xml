<?xml version="1.0"?>

<!--
  This file configures many aspects of creatures' kinds.
  For the documentation and default values of properties that you can
  set here see TObjectKind, TCreatureKind and descendants
  classes documentation (in units CastleObjectKinds and CastleCreatures).

  This file is read each time when the program starts.
  When you manually change this file, you can also force reloading this file
  into the game by command "Reload creatures/kinds.xml file"
  in "Debug options" menu.

  For available sound names see ../sounds/index.xml. Empty (or not specified)
  sound name always means "no sound for this event".

  Notes about animation specification:
  - scenes_per_time is here used only as the multiplier for the
    default value set in the program (currently 30).
    This means that usually you want to pass scenes_per_time="1".
  - optimization and equality_epsilon set here *are honoured*.
    (Although default values (see kanim_format.txt) are often OK.)
-->

<CONFIG>
  <Alien
    actual_attack_time="0.4"
    min_delay_between_attacks="2.0"
    move_speed="0.1"
    max_knocked_back_distance="4.2"
    life_to_run_away="1.0"
    default_max_life="90.0"
    max_height_acceptable_to_fall="1.4"

    sound_sudden_pain="alien_sudden_pain"
    sound_dying="alien_dying"
  >
    <stand_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="alien/alien_still_final.wrl" time="0.00" />
      </animation>
    </stand_animation>
    <stand_to_walk_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="alien/alien_still_final.wrl" time="0.00" />
        <frame file_name="alien/alien_walk_1_final.wrl" time="0.50" />
      </animation>
    </stand_to_walk_animation>
    <walk_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="alien/alien_walk_1_final.wrl" time="0.00" />
        <frame file_name="alien/alien_walk_2_final.wrl" time="0.50" />
      </animation>
    </walk_animation>
    <attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="alien/alien_still_final.wrl" time="0.00" />
        <frame file_name="alien/alien_attack_2_final.wrl" time="0.30" />
        <frame file_name="alien/alien_attack_1_final.wrl" time="0.60" />
        <frame file_name="alien/alien_still_final.wrl" time="1.00" />
      </animation>
    </attack_animation>
    <dying_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="alien/alien_still_final.wrl" time="0.00" />
        <frame file_name="alien/alien_dying_1_final.wrl" time="0.10" />
        <frame file_name="alien/alien_dying_2_final.wrl" time="0.50" />
      </animation>
    </dying_animation>
    <hurt_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="alien/alien_still_final.wrl" time="0.00" />
        <frame file_name="alien/alien_dying_1_final.wrl" time="0.10" />
      </animation>
    </hurt_animation>
  </Alien>

  <Werewolf
    actual_attack_time="0.3"
    move_speed="0.15"
    max_attack_distance="4.2"
    preferred_attack_distance="4.2"
    min_delay_between_attacks="2.0"
    default_max_life="1500.0"
    max_knocked_back_distance="4.2"
    max_angle_to_attack="1.04"
    min_life_loss_to_hurt="0.05"
    chance_to_hurt="0.3"
    max_height_acceptable_to_fall="1.4"
    life_to_run_away="0.2"

    sound_sudden_pain="werewolf_sudden_pain"
    sound_attack_start="werewolf_attack_start"
    sound_dying="werewolf_dying"
  >

    <!-- Werewolf is quite big and has MiddlePosition high and doesn't fly,
         so without this special large max_angle_to_attack value,
         player could avoid attacks just by crouching. -->

    <short_range_attack knockback_distance="2.0">
      <damage const="10" random="10"/>
    </short_range_attack>

    <stand_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
      </animation>
    </stand_animation>
    <stand_to_walk_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
      </animation>
    </stand_to_walk_animation>
    <walk_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
        <frame file_name="werewolf/werewolf_walk_2_final.wrl" time="0.50" />
      </animation>
    </walk_animation>
    <attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
        <frame file_name="werewolf/werewolf_attack_1_final.wrl" time="0.15" />
        <frame file_name="werewolf/werewolf_attack_2_final.wrl" time="0.30" />
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.50" />
      </animation>
    </attack_animation>
    <dying_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
        <frame file_name="werewolf/werewolf_hurt_final.wrl" time="0.30" />
        <frame file_name="werewolf/werewolf_dead_final.wrl" time="0.80" />
      </animation>
    </dying_animation>
    <hurt_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="werewolf/werewolf_still_final.wrl" time="0.00" />
        <frame file_name="werewolf/werewolf_hurt_final.wrl" time="0.30" />
      </animation>
    </hurt_animation>
  </Werewolf>

  <BallMissile
    flying="True"
    default_max_life="1.0"
    close_direction_to_player="True"
    close_direction_to_target_speed="0.02"
    pause_between_sound_idle="2.5"

    sound_explosion="ball_missile_explode"
    sound_idle="ball_missile_idle"
  >

    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>

    <fly_animation>
      <animation scenes_per_time="1" loop="true" backwards="false">
        <frame file_name="ball_missile/ball_missile_1_final.wrl" time="0.00" />
        <frame file_name="ball_missile/ball_missile_2_final.wrl" time="0.50" />
      </animation>
    </fly_animation>
  </BallMissile>

  <Ghost
    move_speed="0.5"
    flying="True"
    max_attack_distance="2.0"
    preferred_attack_distance="2.0"
    min_delay_between_attacks="2.0"
    life_to_run_away="0.01"
    default_max_life="30.0"
    max_knocked_back_distance="4.2"
    sound_dying_tied_to_creature="False"
    max_height_acceptable_to_fall="1.4"

    sound_sudden_pain="ghost_sudden_pain"
    sound_attack_start="ghost_attack_start"
    sound_dying="ghost_dying"
  >

    <short_range_attack knockback_distance="0.0">
      <damage const="7" random="8"/>
    </short_range_attack>

    <stand_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_stand_2_final.wrl" time="1.00" />
      </animation>
    </stand_animation>
    <stand_to_walk_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_walk_2_final.wrl" time="0.50" />
      </animation>
    </stand_to_walk_animation>
    <walk_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_walk_2_final.wrl" time="0.50" />
      </animation>
    </walk_animation>
    <attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_attack_2_final.wrl" time="0.20" />
      </animation>
    </attack_animation>
    <dying_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_dying_2_final.wrl" time="0.30" />
        <frame file_name="ghost/ghost_dying_3_final.wrl" time="1.00" />
      </animation>
    </dying_animation>
    <hurt_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="ghost/ghost_stand_1_final.wrl" time="0.00" />
        <frame file_name="ghost/ghost_walk_2_final.wrl" time="0.30" />
      </animation>
    </hurt_animation>
  </Ghost>

  <Spider
    actual_attack_time="0.25"
    move_speed="0.1"
    max_attack_distance="2.0"
    preferred_attack_distance="2.0"
    min_delay_between_attacks="2.0"
    default_max_life="50.0"
    max_knocked_back_distance="2.0"
    max_angle_to_attack="1.04"
    max_height_acceptable_to_fall="1.4"

    sound_sudden_pain="spider_sudden_pain"
    sound_attack_start="spider_attack_start"
    sound_dying="spider_dying"
  >

    <!-- Spider is quite flat and has MiddlePosition low and doesn't fly.
         This is analogous to Werewolf situation, but this time it's low.
         Without this special large max_angle_to_attack value,
         player could avoid attacks just by standing very close to the spider
         (without crouching). -->

    <short_range_attack knockback_distance="0.1">
      <damage const="10" random="10"/>
    </short_range_attack>

    <stand_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
      </animation>
    </stand_animation>
    <stand_to_walk_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
      </animation>
    </stand_to_walk_animation>
    <walk_animation>
      <!-- This animation really needs more frames to look smoothly -->
      <animation scenes_per_time="5" loop="true" backwards="false">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
        <frame file_name="spider/spider_walk_2.wrl" time="0.04" />
        <frame file_name="spider/spider_walk_3.wrl" time="0.08" />
        <frame file_name="spider/spider_walk_4.wrl" time="0.12" />
        <frame file_name="spider/spider_walk_5.wrl" time="0.16" />
        <frame file_name="spider/spider_stand.wrl" time="0.20" />
      </animation>
    </walk_animation>
    <attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
        <frame file_name="spider/spider_attack_2.wrl" time="0.125" />
        <frame file_name="spider/spider_attack_3.wrl" time="0.25" />
      </animation>
    </attack_animation>
    <dying_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
        <frame file_name="spider/spider_hurt_2.wrl" time="0.30" />
        <frame file_name="spider/spider_dying_3.wrl" time="0.60" />
        <frame file_name="spider/spider_dying_4.wrl" time="1.00" />
        <frame file_name="spider/spider_dying_5.wrl" time="2.00" />
      </animation>
    </dying_animation>
    <hurt_animation>
      <animation scenes_per_time="1" loop="false" backwards="true">
        <frame file_name="spider/spider_stand.wrl" time="0.00" />
        <frame file_name="spider/spider_hurt_2.wrl" time="0.30" />
      </animation>
    </hurt_animation>
  </Spider>

  <SpiderQueen
    actual_attack_time="0.4"
    move_speed="0.35"
    max_attack_distance="8.0"
    preferred_attack_distance="8.0"
    min_delay_between_attacks="2.0"
    default_max_life="1100.0"
    max_knocked_back_distance="2.0"
    max_angle_to_attack="1.04"
    max_height_acceptable_to_fall="5"
    fall_down_life_loss_scale="0.5"
    random_walk_distance="30"
    min_life_loss_to_hurt="0.05"
    chance_to_hurt="0.3"
    life_to_run_away="0.25"

    sound_sudden_pain="spider_queen_sudden_pain"
    sound_attack_start="spider_queen_attack_start"
    sound_dying="spider_queen_dying"
  >

    <!-- SpiderQueen is large, so again the same reasoning applies
         for max_angle_to_attack as for Werewolf. -->

    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>

    <throw_web
      min_delay_between_attacks="5.0"
      max_attack_distance="30.0"
      max_angle_to_attack="4"
      actual_attack_time="0.6"
    />
    <!-- max_angle_to_attack > Pi means "no limits".
         This makes the trick with jumping/flying on SpiderQueen much harder. -->

    <stand_animation>
      <animation scenes_per_time="1" loop="true" backwards="true">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
      </animation>
    </stand_animation>
    <stand_to_walk_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
      </animation>
    </stand_to_walk_animation>
    <walk_animation>
      <!-- This animation really needs more frames to look smoothly. -->
      <animation scenes_per_time="5" loop="true" backwards="false">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
        <frame file_name="spider_queen/spider_queen_walk_2.wrl" time="0.04" />
        <frame file_name="spider_queen/spider_queen_walk_3.wrl" time="0.08" />
        <frame file_name="spider_queen/spider_queen_walk_4.wrl" time="0.12" />
        <frame file_name="spider_queen/spider_queen_walk_5.wrl" time="0.16" />
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.20" />
      </animation>
    </walk_animation>
    <attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
        <frame file_name="spider_queen/spider_queen_attack_2.wrl" time="0.20" />
        <frame file_name="spider_queen/spider_queen_attack_3.wrl" time="0.40" />
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.60" />
      </animation>
    </attack_animation>
    <dying_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
        <frame file_name="spider_queen/spider_queen_dying_2.wrl" time="0.50" />
        <frame file_name="spider_queen/spider_queen_dying_3.wrl" time="1.50" />
      </animation>
    </dying_animation>
    <hurt_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <!-- While this isn't a real animation (first file_name is the same
             as the second), it has non-zero time and this way spider_queen
             may get a little knockback. -->
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.10" />
      </animation>
    </hurt_animation>
    <throw_web_attack_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="0.00" />
        <frame file_name="spider_queen/spider_queen_attack_2.wrl" time="0.30" />
        <frame file_name="spider_queen/spider_queen_attack_alt.wrl" time="0.60" />
        <frame file_name="spider_queen/spider_queen_stand.wrl" time="1.00" />
      </animation>
    </throw_web_attack_animation>
  </SpiderQueen>

  <ThrownWeb
    flying="True"
    default_max_life="1.0"
    close_direction_to_player="False"

    sound_explosion="thrown_web_hit"
    sound_idle="thrown_web_idle"
  >

    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>

    <fly_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="web/web.wrl" time="0.00" />
      </animation>
    </fly_animation>
  </ThrownWeb>

  <Arrow
    camera_radius="1.0"
    flying="True"
    default_max_life="1.0"
    close_direction_to_player="False"
    hits_player="False"
    hits_creatures="True"
    move_speed="2.0"

    sound_explosion="arrow_hit"
  >

    <short_range_attack knockback_distance="5">
      <damage const="20" random="20"/>
    </short_range_attack>

    <fly_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="arrow/arrow.wrl" time="0.00" />
      </animation>
    </fly_animation>
  </Arrow>

  <DoomBarrel
    camera_radius="1.0"
    default_max_life="1.0"
  >
    <stand_animation>
      <animation scenes_per_time="1" loop="false" backwards="false">
        <frame file_name="barrel/barrel.wrl" time="0.00" />
      </animation>
    </stand_animation>
  </DoomBarrel>
</CONFIG>