<?xml version="1.0"?>

<!--
  This file configures many aspects of items' kinds.
  For the documentation and default values of properties that you can
  set here see TObjectKind, TItemKind and descendants
  classes documentation (in units CastleObjectKinds and CastleItems).

  This file is read each time when the program starts.
  When you manually change this file, you can also force reloading this file
  into the game by command "Reload items/kinds.xml file"
  in "Debug options" menu. This way you can test various settings
  without restarting the game. (But note that some item settings don't
  immediately change if you reload this file while the game runs.)

  For available sound names see ../sounds/index.xml. Empty (or not specified)
  sound name always means "no sound for this event".
-->

<CONFIG>
  <LifePotion
    model_file_name="life_potion_processed.wrl"
    name="Potion of Life"
    image_file_name="life_potion.png"
  />

  <Sword
    actual_attack_time="0.294"
    model_file_name="sword.wrl"
    name="Sword"
    image_file_name="sword.png"

    equipping_sound="sword_equipping"
    sound_attack_start="sword_attack_start"
  >
    <screen_image file_name="sword.png" align_left="false" align_bottom="true" />
    <damage const="20.0" random="20.0" />

    <attack_animation>
      <animation scenes_per_time="30" equality_epsilon="0"
        loop="false" backwards="false">
        <frame file_name="attack_animations/sword_1.wrl" time="0" />
        <frame file_name="attack_animations/sword_2.wrl" time="0.5" />
      </animation>
    </attack_animation>
  </Sword>

  <Bow
    actual_attack_time="0.0"
    model_file_name="bow_final.wrl"
    name="Bow"
    image_file_name="bow.png"

    equipping_sound="bow_equipping"
    sound_attack_start="bow_attack_start"
  >
    <screen_image file_name="bow.png" align_left="false" align_bottom="true" />

    <attack_animation>
      <animation scenes_per_time="30" equality_epsilon="0"
        loop="false" backwards="false">
        <frame file_name="attack_animations/bow_2.wrl" time="0" />
        <frame file_name="attack_animations/bow.wrl" time="0.5" />
      </animation>
    </attack_animation>
  </Bow>

  <ScrFlying
    model_file_name="scroll_final.wrl"
    name="Scroll Of Flying"
    image_file_name="scroll.png"
  />

  <Key
    model_file_name="key.wrl"
    name="Key"
    image_file_name="key.png"
  />

  <RedKey
    model_file_name="red_key.wrl"
    name="Red Key"
    image_file_name="red_key.png"
  />

  <Arrow
    model_file_name="quiver.wrl"
    name="Arrow"
    image_file_name="quiver.png"
  />
</CONFIG>