  Separator {
    Rotation { rotation 0 0 1 1.5 }
    Rotation { rotation 1 0 0 1.57 }
    Background {
      backUrl "../../../skies/foggy_sky_back.png"
      bottomUrl "../../../skies/foggy_sky_bottom.png"
      frontUrl "../../../skies/foggy_sky_front.png"
      leftUrl "../../../skies/foggy_sky_left.png"
      rightUrl "../../../skies/foggy_sky_right.png"
      topUrl "../../../skies/foggy_sky_top.png"
    }
  }

  # Camera settings "encoded" in the VRML declaration below :
  # direction 0.002847204683349 -0.199979737401009 -0.000000017483663
  # up 1.77317521776743E-010 -0.000000043708827 1
  # gravityUp 0 0 1
  Separator {
    Transform {
      translation -52.858566284179687 180.4088134765625 1.656345009803772
      rotation 1 0 0 1.570796370506287
    }
    PerspectiveCamera {
      position 0 0 0 # camera position is expressed by translation
      orientation -0.000003070474804 -1 0 3.127356767654419
    }
  }

  # rotate to make up vector as +Z
  Rotation { rotation 1 0 0 1.57 }

  # proper scaling - original model is scaled down to fit
  # sizes of my items and creatures
  Scale { scaleFactor 0.05 0.05 0.05 }

  WWWInline { name "e1m1.wrl" }

  WWWInline { name "e1m1_blender.wrl" }
