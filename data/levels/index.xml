    played_music_sound="cages_music_with_rain"
    footsteps_sound="player_footsteps_concrete">

    <area vrml_name="HintOpenDoorBox">
      <hint>Hint: open this door using the %i</hint>
    </area>

    <required_resources>
      <creature name="Spider" />
      <creature name="SpiderQueen" />
      <creature name="ThrownWeb" />
    </required_resources>

  </level>

  <level
    name="tower"
