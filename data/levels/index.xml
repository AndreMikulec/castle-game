  <level
    name="fountain"
    scene_file_name="fountain/fountain_final.wrl"
    title="Fountain"
    title_hint="shadows and bump mapping ON adviced"
    number="15"
    implementation_class="TFountainLevel"
    footsteps_sound="player_footsteps_concrete"
    scene_dynamic_shadows="True"

    demo="True"
    default_available_for_new_game="True"
  >

    <required_resources>
      <creature name="Alien" />
      <creature name="BallMissile" />
