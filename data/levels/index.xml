    title="Tower"
    number="99"
    implementation_class="TTowerLevel"

    demo="True"
    default_available_for_new_game="True"

    footsteps_sound="player_footsteps_grass"
  >

    <area vrml_name="HintElevButton">
      <hint>Hint: press the elevator button using the %i</hint>
    </area>

    <required_resources>
      <creature name="Alien" />
      <creature name="BallMissile" />
    </required_resources>

  </level>

  <level
    name="doom_e1m1"
    scene_file_name="doom/e1m1/e1m1_final.wrl"

    title="Doom E1M1"
    title_hint="shadows OFF adviced"
    number="666"
    implementation_class="TDoomE1M1Level"
    loading_bg="doom/logo/doom_title.png"
    loading_bar_y_position="0.2"

    demo="True"
    default_available_for_new_game="True"

    played_music_sound="doom_e1m1"
    footsteps_sound="player_footsteps_concrete">

    <area vrml_name="HintOpenDoorBox">
      <hint>Hint: open doors using the %i</hint>
    </area>

    <required_resources>
      <creature name="Alien" />
      <creature name="Werewolf" />
      <creature name="BallMissile" />
      <creature name="Ghost" />
      <creature name="DoomBarrel" />
    </required_resources>

  </level>

  <level
    name="hello_world"
    scene_file_name="hello_world/hello_world_final.wrl"
    title="Hello world"
    number="95"
    implementation_class="TLevel"

    demo="True"
    default_available_for_new_game="True"

    footsteps_sound="player_footsteps_concrete">

    <required_resources>
