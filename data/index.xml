<?xml version="1.0"?>

<CONFIG>
<!--
  ==============================================================================

  Creatures kinds.
  For the documentation and default values of properties that you can
  set here see TObjectKind, TCreatureKind and descendants
  classes documentation (in units GameObjectKinds and GameCreatures).

  This file is read each time when the program starts.
  When you manually change this file, you can also force reloading this file
  into the game by command "Reload creatures/kinds.xml file"
  in "Debug options" menu.

  For available sound names see ../sounds/index.xml. Empty (or not specified)
  sound name always means "no sound for this event".
-->

  <Alien
    actual_attack_time="0.4"
    min_delay_between_attacks="2.0"
    move_speed="5.0"
    knocked_back_distance="4.2"
    knock_back_speed="35"
    life_to_run_away="1.0"
    default_max_life="90.0"
    max_height_acceptable_to_fall="1.4"

    middle_position_height="0.8"

    sound_sudden_pain="alien_sudden_pain"
    sound_dying="alien_dying"

    stand_animation="creatures/alien/alien_still_final.wrl"
    stand_to_walk_animation="creatures/alien/stand_to_walk.kanim"
    walk_animation="creatures/alien/walk.kanim"
    attack_animation="creatures/alien/attack.kanim"
    dying_animation="creatures/alien/dying.kanim"
    dying_back_animation="creatures/alien/dying_back.kanim"
    hurt_animation="creatures/alien/hurt.kanim"
  />

  <!-- max_angle_to_attack in Werewolf comments:
       Werewolf is quite big and has MiddlePosition high and doesn't fly,
       so without this special large max_angle_to_attack value,
       player could avoid attacks just by crouching. -->

  <Werewolf
    actual_attack_time="0.3"
    move_speed="15.0"
    max_attack_distance="4.2"
    preferred_attack_distance="4.2"
    min_delay_between_attacks="2.0"
    default_max_life="300.0"
    knocked_back_distance="4.2"
    knock_back_speed="35"
    max_angle_to_attack="1.04"
    min_life_loss_to_hurt="0.05"
    chance_to_hurt="0.3"
    max_height_acceptable_to_fall="1.4"
    life_to_run_away="0.2"

    middle_position_height="0.7"
    radius="1.0"

    sound_sudden_pain="werewolf_sudden_pain"
    sound_attack_start="werewolf_attack_start"
    sound_dying="werewolf_dying"

    stand_animation="creatures/werewolf/werewolf_still_final.wrl"
    stand_to_walk_animation="creatures/werewolf/werewolf_still_final.wrl"
    walk_animation="creatures/werewolf/walk.kanim"
    attack_animation="creatures/werewolf/attack.kanim"
    dying_animation="creatures/werewolf/dying.kanim"
    hurt_animation="creatures/werewolf/hurt.kanim"
  >
    <short_range_attack knockback_distance="6.0">
      <damage const="5" random="5"/>
    </short_range_attack>
  </Werewolf>

  <BallMissile
    flying="True"
    default_max_life="1.0"
    close_direction_to_target_speed="1.0"
    pause_between_sound_idle="2.5"
    knocked_back_distance="0.0"
    falling_down_speed="0.0"

    middle_position_height="0.0"

    sound_explosion="ball_missile_explode"
    sound_idle="ball_missile_idle"

    fly_animation="creatures/ball_missile/fly.kanim"
  >
    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>
  </BallMissile>

  <Ghost
    move_speed="25.0"
    flying="True"
    max_attack_distance="2.0"
    preferred_attack_distance="2.0"
    min_delay_between_attacks="2.0"
    life_to_run_away="0.01"
    default_max_life="30.0"
    knocked_back_distance="4.2"
    knock_back_speed="35"
    sound_dying_tied_to_creature="False"
    max_height_acceptable_to_fall="1.4"
    falling_down_speed="0.0"

    middle_position_height="0.5"

    sound_sudden_pain="ghost_sudden_pain"
    sound_attack_start="ghost_attack_start"
    sound_dying="ghost_dying"

    stand_animation="creatures/ghost/stand.kanim"
    stand_to_walk_animation="creatures/ghost/stand_to_walk.kanim"
    walk_animation="creatures/ghost/walk.kanim"
    attack_animation="creatures/ghost/attack.kanim"
    dying_animation="creatures/ghost/dying.kanim"
    hurt_animation="creatures/ghost/hurt.kanim"
  >
    <short_range_attack knockback_distance="0.0">
      <damage const="7" random="8"/>
    </short_range_attack>
  </Ghost>

  <!-- max_angle_to_attack on Spider comments:
       Spider is quite flat and has MiddlePosition low and doesn't fly.
       This is analogous to Werewolf situation, but this time it's low.
       Without this special large max_angle_to_attack value,
       player could avoid attacks just by standing very close to the spider
       (without crouching). -->

  <Spider
    actual_attack_time="0.25"
    move_speed="5.0"
    max_attack_distance="2.0"
    preferred_attack_distance="2.0"
    min_delay_between_attacks="2.0"
    default_max_life="50.0"
    knocked_back_distance="2.0"
    knock_back_speed="35"
    max_angle_to_attack="1.04"
    max_height_acceptable_to_fall="1.4"

    sound_sudden_pain="spider_sudden_pain"
    sound_attack_start="spider_attack_start"
    sound_dying="spider_dying"

    stand_animation="creatures/spider/spider_stand.wrl"
    stand_to_walk_animation="creatures/spider/spider_stand.wrl"
    walk_animation="creatures/spider/walk.kanim"
    attack_animation="creatures/spider/attack.kanim"
    dying_animation="creatures/spider/dying.kanim"
    hurt_animation="creatures/spider/hurt.kanim"
  >
    <short_range_attack knockback_distance="0.1">
      <damage const="10" random="10"/>
    </short_range_attack>
  </Spider>

  <!-- max_angle_to_attack for SpiderQueen comments:
       SpiderQueen is large, the same reasoning is behind
       it's max_angle_to_attack as for Werewolf.

       Note: max_angle_to_attack > Pi means "no limits".
       This makes the trick with jumping/flying on SpiderQueen much harder.
       For now, not used - - - let's allow inventive players to use it.
  -->

  <SpiderQueen
    actual_attack_time="0.4"
    move_speed="17.5"
    max_attack_distance="8.0"
    preferred_attack_distance="8.0"
    min_delay_between_attacks="2.0"
    default_max_life="1100.0"
    knocked_back_distance="2.0"
    knock_back_speed="35"
    max_angle_to_attack="1.04"
    max_height_acceptable_to_fall="5"
    fall_down_life_loss_scale="0.5"
    random_walk_distance="30"
    min_life_loss_to_hurt="0.05"
    chance_to_hurt="0.3"
    life_to_run_away="0.25"

    sound_sudden_pain="spider_queen_sudden_pain"
    sound_attack_start="spider_queen_attack_start"
    sound_dying="spider_queen_dying"

    stand_animation="creatures/spider_queen/spider_queen_stand.wrl"
    stand_to_walk_animation="creatures/spider_queen/spider_queen_stand.wrl"
    walk_animation="creatures/spider_queen/walk.kanim"
    attack_animation="creatures/spider_queen/attack.kanim"
    dying_animation="creatures/spider_queen/dying.kanim"
    hurt_animation="creatures/spider_queen/hurt.kanim"
    throw_web_attack_animation="creatures/spider_queen/throw_web_attack.kanim"
  >
    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>

    <throw_web
      min_delay_between_attacks="5.0"
      max_attack_distance="30.0"
      max_angle_to_attack="4"
      actual_attack_time="0.6"
    />
  </SpiderQueen>

  <ThrownWeb
    flying="True"
    default_max_life="1.0"
    close_direction_to_player="False"
    knocked_back_distance="0.0"
    falling_down_speed="0.0"

    middle_position_height="0.0"

    sound_explosion="thrown_web_hit"
    sound_idle="thrown_web_idle"

    casts_shadow="False"

    fly_animation="creatures/web/web.wrl"
  >
    <short_range_attack knockback_distance="5">
      <damage const="10" random="10"/>
    </short_range_attack>
  </ThrownWeb>

  <Arrow
    flying="True"
    default_max_life="1.0"
    close_direction_to_player="False"
    hits_player="False"
    hits_creatures="True"
    move_speed="100.0"
    knocked_back_distance="0.0"
    falling_down_speed="0.15"

    middle_position_height="0.0"
    radius="0.3"

    sound_explosion="arrow_hit"

    fly_animation="creatures/arrow/arrow.wrl"
  >
    <short_range_attack knockback_distance="1">
      <damage const="20" random="20"/>
    </short_range_attack>
  </Arrow>

  <DoomBarrel
    radius="0.5"
    default_max_life="1.0"
    knock_back_speed="35"

    stand_animation="creatures/barrel/barrel.wrl"
  />

<!--
  ==============================================================================

  Pickable items kinds.
  For the documentation and default values of properties that you can
  set here see TItemKind and descendants classes documentation
  (in unit CastleItems).

  This file is read each time when the program starts.
  When you manually change this file, you can also force reloading this file
  into the game by command "Reload index.xml file"
  in "Debug options" menu. This way you can test various settings
  without restarting the game. (But note that some item settings don't
  immediately change if you reload this file while the game runs.)

  For available sound names see sounds/index.xml. Empty (or not specified)
  sound name always means "no sound for this event".

  Paths should be relative to the location of this file
  (i.e. data/items/ subdir inside "The Castle" data).
  As path delimiter use slashes ("/"), the engine will make sure they
  are handled OK on all platforms.
-->

  <LifePotion
    scene="items/life_potion/model_processed.wrl"
    name="Potion of Life"
    image="items/life_potion/image.png"
  />

  <Sword
    actual_attack_time="0.294"
    scene="items/sword/model.wrl"
    name="Sword"
    image="items/sword/image.png"

    equipping_sound="sword_equipping"
    sound_attack_start="sword_attack_start"
    attack_knockback_distance="1.0"

    attack_animation="items/sword/attack.kanim"
    ready_animation="items/sword/ready.wrl"
  >
    <damage const="20.0" random="20.0" />
  </Sword>

  <Bow
    actual_attack_time="0.0"
    scene="items/bow/model_final.wrl"
    name="Bow"
    image="items/bow/image.png"

    equipping_sound="bow_equipping"
    sound_attack_start="bow_attack_start"

    attack_animation="items/bow/attack.kanim"
    ready_animation="items/bow/ready.wrl"
  >
  </Bow>

  <ScrFlying
    scene="items/scroll/model_final.wrl"
    name="Scroll Of Flying"
    image="items/scroll/image.png"
  />

  <Key
    scene="items/key/model.wrl"
    name="Key"
    image="items/key/image.png"
  />

  <RedKey
    scene="items/red_key/model.wrl"
    name="Red Key"
    image="items/red_key/image.png"
  />

  <Quiver
    scene="items/quiver/model.wrl"
    name="Arrow"
    image="items/quiver/image.png"
  />
</CONFIG>
