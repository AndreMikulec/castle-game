<?xml version="1.0"?>

<!-- attack/max_angle in Werewolf comments:
     Werewolf is quite big and has Middle high and doesn't fly,
     so without this special large attack/max_angle value,
     player could avoid attacks just by crouching. -->

<resource
  name="Werewolf"
  type="Werewolf"

  move_speed="15.0"
  default_max_life="300.0"
  knocked_back_distance="4.2"
  knock_back_speed="35"
  min_life_loss_to_hurt="0.05"
  chance_to_hurt="0.3"
  max_height_acceptable_to_fall="1.4"
  middle_height="0.7"
  radius="1.0"

  sound_sudden_pain="werewolf_sudden_pain"
  sound_dying="werewolf_dying"
>
  <model>
    <stand file_name="werewolf_still_final.wrl"/>
    <stand_to_walk file_name="werewolf_still_final.wrl"/>
    <walk file_name="walk.kanim"/>
    <attack file_name="attack.kanim"/>
    <dying file_name="dying.kanim"/>
    <hurt file_name="hurt.kanim"/>
  </model>
  <run_away life="0.2"/>
  <attack
    short_range="True"
    sound="werewolf_actual_attack_hit"
    start_sound="werewolf_attack_start"
    time="0.3"
    knockback_distance="6.0"
    min_delay="2.0"
    max_distance="4.2"
    preferred_distance="4.2"
    max_angle="1.04"
  >
    <damage const="5" random="5"/>
  </attack>
</resource>
